<script>
window.addEventListener('load', ()=>{
  setTimeout(()=> document.getElementById('popup').classList.add('show'), 200);
});

const audio = document.getElementById('voice');
const playBtn = document.getElementById('playBtn');
playBtn.addEventListener('click', ()=>{
  if(audio.paused){
    audio.play();
    playBtn.classList.add('playing');
    playBtn.textContent = 'Pause Voice Note';
  } else {
    audio.pause();
    playBtn.classList.remove('playing');
    playBtn.textContent = 'Play Voice Note';
  }
});
audio.addEventListener('ended', ()=>{
  playBtn.classList.remove('playing');
  playBtn.textContent = 'Play Voice Note';
});

/* --- Fireworks animation --- */
(function(){
  const canvas=document.getElementById('fireworks');
  const ctx=canvas.getContext('2d');
  let W,H;
  function resize(){
    W=canvas.width=window.innerWidth;
    H=canvas.height=window.innerHeight;
  }
  resize(); window.addEventListener('resize',resize);
  const particles=[];
  function Firework(x,y,color){
    for(let i=0;i<50;i++){
      const a=Math.random()*2*Math.PI;
      const s=Math.random()*4+1;
      particles.push({
        x:x,y:y,vx:Math.cos(a)*s,vy:Math.sin(a)*s,
        life:80,color:color
      });
    }
  }
  function loop(){
    ctx.fillStyle="rgba(10,20,50,0.2)";
    ctx.fillRect(0,0,W,H);
    if(Math.random()<0.05)
      Firework(Math.random()*W,Math.random()*H*0.7,`hsl(${Math.random()*360},100%,60%)`);
    for(let i=particles.length-1;i>=0;i--){
      const p=particles[i];
      p.x+=p.vx; p.y+=p.vy; p.vy+=0.02; p.life--;
      if(p.life<=0) particles.splice(i,1);
      ctx.beginPath();
      ctx.fillStyle=p.color;
      ctx.globalAlpha=p.life/80;
      ctx.arc(p.x,p.y,2,0,2*Math.PI);
      ctx.fill();
    }
    requestAnimationFrame(loop);
  }
  loop();
})();
</script>
